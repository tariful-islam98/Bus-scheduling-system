@model IEnumerable<BusScheduling.Models.Driver>

@{
    ViewData["Title"] = "DriverList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Driver List</h2>

<p>
    <a asp-controller="Home" asp-action="AddDriver">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Driver Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DriverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="EditDriver" asp-route-id="@item.DriverId">Edit</a> |
                <a asp-action="DeleteDriver" asp-route-id="@item.DriverId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
