@model BusScheduling.Models.Route

@{
    ViewData["Title"] = "EditRoute";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Route</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRoute">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RouteNo" />
            <div class="form-group">
                <label asp-for="MainDestination" class="control-label">Main Destination</label>
                <input asp-for="MainDestination" class="form-control" />
                <span asp-validation-for="MainDestination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stands" class="control-label"></label>
                <input asp-for="Stands" class="form-control" />
                <span asp-validation-for="Stands" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="RoutesAd">Back</a>
</div>

