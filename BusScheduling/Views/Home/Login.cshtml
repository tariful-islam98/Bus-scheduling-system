@model BusScheduling.Models.Admin

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Admin Login</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdminId" class="control-label"> Admin Id</label>
                <input asp-for="AdminId" class="form-control" />
                @*<span asp-validation-for="AdminId" class="text-danger"></span>*@
                @*@Html.ValidationMessageFor(model => model.AdminId)*@
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password"  />
                @*<span asp-validation-for="Password" class="text-danger"></span>*@
            <label style="color:red">@Html.ValidationMessageFor(model => model.Password)</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
            <div class="form-group">
                <label style="color:red">@Html.ValidationMessage("LoginError")</label>
            </div>
        </form>
    </div>
</div>


